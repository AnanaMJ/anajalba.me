{
  "name": "anajalba.me",
  "version": "1.0.0",
  "repository": "git@github.com:AnanaMJ/anajalba.me.git",
  "author": "Ana Jalba <ana.jalba13@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf ./build",
    "prod": "run-s clean build start",
    "dev": "run-s clean build-dev start-dev",
    "build": "run-p build-client build-server",
    "build-dev": "run-p build-client-dev build-server-dev",
    "build-client": "cross-env NODE_ENV=production webpack -p",
    "build-client-dev": "cross-env NODE_ENV=development webpack --progress",
    "build-server": "tsc",
    "build-server-dev": "tsc --diagnostics",
    "start": "cross-env NODE_ENV=production node ./build/server/app.js",
    "start-dev": "cross-env NODE_ENV=development node ./build/server/app.js",
    "lint": "run-p lint-ts lint-scss",
    "lint-scss": "sass-lint -v -c ./sasslint.yml \"./src/client/**/*.scss\"",
    "lint-ts": "tslint -c ./tslint.json \"./src/client/**/*.{ts,tsx}\" \"./src/server/**/*.ts\"",
    "lint-ts-fix": "tslint --fix -c ./tslint.json \"./src/client/**/*.{ts,tsx}\" \"./src/server/**/*.ts\""
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/compression": "^0.0.36",
    "@types/express": "^4.16.0",
    "@types/react": "^16.7.17",
    "@types/react-dom": "^16.0.11",
    "@types/react-router": "^4.4.3",
    "@types/react-router-dom": "^4.3.1",
    "@types/webpack-dev-middleware": "^2.0.2",
    "@types/webpack-hot-middleware": "^2.16.4",
    "babel-loader": "^8.0.4",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "file-loader": "^2.0.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.2",
    "sass-lint": "^1.12.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "terser": "^3.11.0",
    "terser-webpack-plugin": "^1.1.0",
    "ts-loader": "^5.3.1",
    "tslint": "^5.11.0",
    "tslint-immutable": "^5.0.1",
    "tslint-react": "^3.6.0",
    "typescript": "2.9",
    "typings-for-css-modules-loader": "^1.7.0",
    "webpack": "^4.27.1",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-hot-middleware": "^2.24.3"
  },
  "dependencies": {
    "bootstrap-scss": "^4.1.3",
    "compression": "^1.7.3",
    "express": "^4.16.4",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1"
  }
}
